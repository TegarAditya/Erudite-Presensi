package com.erudite;

import java.nio.charset.Charset;
import java.nio.charset.StandardCharsets;

import com.erudite.MD5Utils;

public class Main {
	
	   private static final String OUTPUT_FORMAT = null;
	    private static final Charset UTF_8 = StandardCharsets.UTF_8;



	public String getData(){
	        return "data";
	    }
	   
	   
    public static void main(String[] args) {
		   MD5Utils hash = new MD5Utils();
		   
		   String pText = "Hello MD5";

	        byte[] md5InBytes = HashPassword.digest(pText.getBytes(UTF_8));
	        System.out.println(String.format(OUTPUT_FORMAT, "MD5 (hex) ", hash.bytesToHex(md5InBytes)));
	        // fixed length, 16 bytes, 128 bits.
	        System.out.println(String.format(OUTPUT_FORMAT, "MD5 (length)", md5InBytes.length));
    }
    

}
